{
  "openapi": "3.0.0",
  "info": {
    "title": "Project Trybesmith",
    "description": "Projeto prático criando API Rest usando typescript",
    "version": "1.0.0"
  },
  "paths": {
    "/login": {
      "post": {
        "summary": "Endpoint para autenticar usuário",
        "description": "Rota responsável por verificar informações do usuário e gerar um token de acesso.",
        "tags": ["Login"],
        "requestBody": {
          "required": true,
          "description": "O corpo deve conter os campos obrigatório `username` e `password` conforme sua descrição.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginBody"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Autenticação realizada com sucesso."
          },
          "400": {
            "description": "Ausência de campo obrigatório. `username` ou `password`"
          },
          "401": {
            "description": "Acesso não autorizado."
          },
          "500": {
            "description": "Falha interna com o servidor."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LoginBody": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "description": "Sem restrições de caracteres, usuário deve ser cadastrado.",
            "example": "reigal"
          },
          "password": {
            "type": "string",
            "description": "Sem restrições de caracteres, a senha deve corresponder ao cadastro.",
            "example": "1dragaonoceu"
          }
        }
      }
    }
  },
  "securitySchemes": {
    "token": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  }
}